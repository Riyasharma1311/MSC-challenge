#include <iostream>
#include <string>
using namespace std;
class Solution
{
public:
    bool isPalindrome(int x)
    {
        // converting integer into a string
        string str = to_string(x);

        int first = 0;
        int last = str.length() - 1;
        while (first < last)
        {
            if (str[first] != str[last])
            {
                return false;
            }
            first++;
            last--;
          
        }
        return true;
    }
}s1;

